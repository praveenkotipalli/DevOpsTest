{
  "dashboard": {
    "id": null,
    "title": "DevOps Pipeline Dashboard",
    "tags": ["devops", "jenkins", "jmeter", "pipeline"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Pipeline Build Status",
        "type": "stat",
        "targets": [
          {
            "expr": "jenkins_build_status",
            "legendFormat": "Build {{build_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Build Duration",
        "type": "timeseries",
        "targets": [
          {
            "expr": "jenkins_build_duration_seconds",
            "legendFormat": "Build {{build_id}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "JMeter Performance Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "jmeter_success_rate",
            "legendFormat": "Success Rate"
          },
          {
            "expr": "jmeter_total_requests",
            "legendFormat": "Total Requests"
          },
          {
            "expr": "jmeter_failed_requests",
            "legendFormat": "Failed Requests"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Deployment Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "jenkins_deployment_success",
            "legendFormat": "Deployment {{build_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Application Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"application\"}",
            "legendFormat": "Application Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
